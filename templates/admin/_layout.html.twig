{% extends 'base.html.twig' %}

{% set active_menu = active_menu|default('dashboard') %}

{% block body %}
    <div class="min-h-screen bg-neutral-primary text-body">
        <aside id="admin-sidebar" class="fixed inset-y-0 left-0 z-40 w-64 -translate-x-full border-r border-default bg-neutral-primary px-4 py-6 transition-transform lg:translate-x-0" aria-label="Sidebar">
            <div class="mb-8 flex items-center gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-base bg-brand-strong text-white">
                    <span class="text-sm font-semibold">CD08</span>
                </div>
                <div>
                    <p class="text-xs uppercase tracking-[0.18em] text-brand">SPSL</p>
                    <p class="text-sm font-semibold text-heading">Backoffice</p>
                </div>
            </div>

            <nav class="space-y-4 text-sm">
                <div>
                    <p class="mb-2 text-xs font-semibold uppercase tracking-[0.18em] text-brand">Gestion</p>
                    <ul class="space-y-0">
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 {{ active_menu == 'dashboard' ? 'bg-neutral-secondary-soft text-heading' : 'text-body hover:bg-neutral-secondary-soft' }}" href="{{ path('app_admin_index') }}">
                                <span>Accueil</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 {{ active_menu == 'sites' ? 'bg-neutral-secondary-soft text-heading' : 'text-body hover:bg-neutral-secondary-soft' }}" href="{{ path('app_admin_sites_index') }}">
                                <span>Sites</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Salles et matériels</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Usagers</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Devis et conventions</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div>
                    <p class="mb-2 text-xs font-semibold uppercase tracking-[0.18em] text-brand">Administration</p>
                    <ul class="space-y-0">
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 {{ active_menu == 'authentication_logs' ? 'bg-neutral-secondary-soft text-heading' : 'text-body hover:bg-neutral-secondary-soft' }}" href="{{ path('app_admin_authentication_logs_index') }}">
                                <span>Journaux d’authentification</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 {{ active_menu == 'users' ? 'bg-neutral-secondary-soft text-heading' : 'text-body hover:bg-neutral-secondary-soft' }}" href="{{ path('app_admin_users_index') }}">
                                <span>Utilisateurs</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div>
                    <p class="mb-2 text-xs font-semibold uppercase tracking-[0.18em] text-brand">Paramétrage</p>
                    <ul class="space-y-0">
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Tarification</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Habilitations</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Rapports</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div>
                    <p class="mb-2 text-xs font-semibold uppercase tracking-[0.18em] text-brand">Pilotage</p>
                    <ul class="space-y-0">
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 {{ active_menu == 'dashboard' ? 'bg-neutral-secondary-soft text-heading' : 'text-body hover:bg-neutral-secondary-soft' }}" href="{{ path('app_admin_index') }}">
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Réservations</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Plannings</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </aside>

        <div class="lg:pl-64">
            <header class="sticky top-0 z-30 border-b border-default bg-neutral-primary/90 backdrop-blur">
                <div class="flex flex-wrap items-center gap-3 px-4 py-3 sm:px-6">
                    <button class="inline-flex items-center justify-center rounded-base border border-default bg-neutral-primary-soft p-2 text-heading hover:bg-neutral-secondary-soft lg:hidden" type="button" data-drawer-target="admin-sidebar" data-drawer-toggle="admin-sidebar" aria-controls="admin-sidebar">
                        <span class="sr-only">Ouvrir le menu</span>
                        <svg class="icon-md text-heading" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M5 7h14M5 12h14M5 17h14"/>
                        </svg>
                    </button>
                    <div class="flex-1">
                        <label class="sr-only" for="admin-search">Recherche</label>
                        <div class="relative">
                            <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-body">
                                <svg class="icon-sm" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>
                                </svg>
                            </span>
                            <input id="admin-search" type="search" placeholder="Rechercher une salle, un usager..." class="w-full rounded-base border border-default bg-neutral-primary-soft py-2 pl-10 pr-4 text-sm text-heading placeholder:text-body focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40" />
                        </div>
                    </div>
                    <button id="notification-bell" data-dropdown-toggle="notification-dropdown" class="relative inline-flex items-center justify-center rounded-base border border-default bg-neutral-primary-soft p-2 text-heading hover:bg-neutral-secondary-medium" type="button">
                        <span class="sr-only">Notifications</span>
                        <svg class="icon-md text-heading" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5.365V3m0 2.365a5.338 5.338 0 0 1 5.133 5.368v1.8c0 2.386 1.867 2.982 1.867 4.175 0 .593 0 1.292-.538 1.292H5.538C5 18 5 17.301 5 16.708c0-1.193 1.867-1.789 1.867-4.175v-1.8A5.338 5.338 0 0 1 12 5.365ZM8.733 18c.094.852.306 1.54.944 2.112a3.48 3.48 0 0 0 4.646 0c.638-.572 1.236-1.26 1.33-2.112h-6.92Z"/>
                        </svg>
                        <span id="notification-badge" class="absolute -right-1 -top-1 inline-flex h-4 min-w-4 items-center justify-center rounded-full bg-danger px-1 text-2xs font-semibold leading-none text-white">3</span>
                    </button>
                    <div id="notification-dropdown" class="z-50 hidden w-80 divide-y divide-neutral-secondary-soft rounded-base border border-default bg-neutral-primary-soft shadow-xs">
                        <div class="flex items-center justify-between px-4 py-3">
                            <p class="text-sm font-semibold text-heading">Notifications</p>
                            <button id="mark-all-read" class="text-xs font-semibold text-fg-brand hover:underline" type="button">Tout marquer comme lu</button>
                        </div>
                        <div class="max-h-72 overflow-auto">
                            <a class="flex gap-3 px-4 py-3 text-sm text-body hover:bg-neutral-secondary-medium hover:text-heading focus:bg-neutral-secondary-medium focus:text-heading" href="#">
                                <span class="mt-1 h-2 w-2 rounded-full bg-accent"></span>
                                <div>
                                    <p class="font-semibold text-heading">Nouvelle demande</p>
                                    <p class="text-xs text-body">Salle Bairon 1 · Association ABC</p>
                                </div>
                            </a>
                            <a class="flex gap-3 px-4 py-3 text-sm text-body hover:bg-neutral-secondary-medium hover:text-heading focus:bg-neutral-secondary-medium focus:text-heading" href="#">
                                <span class="mt-1 h-2 w-2 rounded-full bg-accent"></span>
                                <div>
                                    <p class="font-semibold text-heading">Devis modifié</p>
                                    <p class="text-xs text-body">Maison des Sports · En attente</p>
                                </div>
                            </a>
                            <a class="flex gap-3 px-4 py-3 text-sm text-body hover:bg-neutral-secondary-medium hover:text-heading focus:bg-neutral-secondary-medium focus:text-heading" href="#">
                                <span class="mt-1 h-2 w-2 rounded-full bg-accent"></span>
                                <div>
                                    <p class="font-semibold text-heading">Caution reçue</p>
                                    <p class="text-xs text-body">Entreprise X · Montant 250 €</p>
                                </div>
                            </a>
                        </div>
                        <div class="px-4 py-3 text-center">
                            <a class="text-sm font-semibold text-fg-brand hover:underline" href="#">Voir toutes les notifications</a>
                        </div>
                    </div>
                    <button id="theme-toggle" class="inline-flex items-center justify-center rounded-base border border-default bg-neutral-primary-soft p-2 text-heading hover:bg-neutral-secondary-medium" type="button">
                        <span class="sr-only">Basculer le theme</span>
                        <svg id="theme-toggle-dark-icon" class="hidden icon-md text-heading" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 21a9 9 0 0 1-.5-17.986V3c-.354.966-.5 1.911-.5 3a9 9 0 0 0 9 9c.239 0 .254.018.488 0A9.004 9.004 0 0 1 12 21Z"/>
                        </svg>
                        <svg id="theme-toggle-light-icon" class="hidden icon-md text-heading" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5V3m0 18v-2M7.05 7.05 5.636 5.636m12.728 12.728L16.95 16.95M5 12H3m18 0h-2M7.05 16.95l-1.414 1.414M18.364 5.636 16.95 7.05M16 12a4 4 0 1 1-8 0 4 4 0 0 1 8 0Z"/>
                        </svg>
                    </button>
                    <button id="admin-user-menu" data-dropdown-toggle="admin-user-dropdown" class="inline-flex items-center gap-3 rounded-base border border-default bg-neutral-primary-soft px-3 py-2 text-sm font-semibold text-heading hover:bg-neutral-secondary-medium" type="button">
                        <span class="inline-flex h-7 w-7 items-center justify-center rounded-full bg-brand-strong text-xs text-white">FD</span>
                        <span class="hidden sm:inline">Frédéric</span>
                        <svg class="icon-sm text-heading" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 10 4 4 4-4"/>
                        </svg>
                    </button>
                    <div id="admin-user-dropdown" class="z-50 hidden w-48 divide-y divide-neutral-secondary-soft rounded-base border border-default bg-neutral-primary-soft shadow-xs">
                        <div class="px-4 py-3 text-sm">
                            <p class="font-semibold text-heading">Frédéric Demoulin</p>
                            <p class="text-xs text-body">Admin SPSL</p>
                        </div>
                        <ul class="py-2 text-sm text-body">
                            <li><a class="block px-4 py-2 text-body hover:bg-neutral-secondary-medium hover:text-heading focus:bg-neutral-secondary-medium focus:text-heading" href="#">Mon profil</a></li>
                            <li><a class="block px-4 py-2 text-body hover:bg-neutral-secondary-medium hover:text-heading focus:bg-neutral-secondary-medium focus:text-heading" href="#">Paramètres</a></li>
                        </ul>
                        <div class="py-2">
                            <a class="block px-4 py-2 text-sm text-body hover:bg-neutral-secondary-medium hover:text-heading focus:bg-neutral-secondary-medium focus:text-heading" href="{{ path('app_logout') }}">Déconnexion</a>
                        </div>
                    </div>
                </div>
            </header>

            <main class="px-4 py-8 sm:px-6">
                {% block admin_content %}{% endblock %}
            </main>
        </div>
    </div>
{% endblock %}
