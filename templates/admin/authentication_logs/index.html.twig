{% extends 'admin/_layout.html.twig' %}

{% block title %}Journaux de connexion{% endblock %}

{% set active_menu = 'authentication_logs' %}
{% set page_heading = 'Journaux d’authentification' %}

{% block admin_breadcrumb %}
    <div class="mb-4">
        {% include 'admin/authentication_logs/_breadcrumb.html.twig' with { current_label: page_heading } %}
    </div>
{% endblock %}

{% block admin_content %}
    <div class="mb-8">
        <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Administration</p>
        <h1 class="mt-3 text-3xl font-semibold text-heading">{{ page_heading }}</h1>
        <p class="mt-2 max-w-2xl text-sm text-body">Suivi des événements d’authentification et conformité RGPD.</p>
    </div>

    <section class="rounded-2xl border border-default bg-neutral-primary-soft p-5 shadow-xs">
        {{ include('components/_table_header.html.twig', {
            route: 'app_admin_authentication_logs_index',
            params: params,
            target: 'authentication-logs',
            search_id: 'authentication-logs-search',
            search_placeholder: 'Rechercher un identifiant, un utilisateur, une IP...',
            search_value: params.filters.q ?? ''
        }) }}
        <div id="authentication-logs-table-container" data-table-ajax="authentication-logs">
            {% include 'admin/authentication_logs/_table.html.twig' with { pager: pager, params: params } %}
        </div>
    </section>
{% endblock %}
