{% extends 'admin/_layout.html.twig' %}

{% block title %}Éditer un utilisateur{% endblock %}

{% set active_menu = 'users' %}
{% set page_heading = 'Éditer un utilisateur' %}

{% block admin_breadcrumb %}
    <div class="mb-4">
        {% include 'admin/users/_breadcrumb.html.twig' with { current_label: page_heading } %}
    </div>
{% endblock %}

{% block admin_content %}
    <div class="mb-8 flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Administration</p>
            <h1 class="mt-3 text-3xl font-semibold text-heading">{{ page_heading }}</h1>
            <p class="mt-2 max-w-2xl text-sm text-body">Mettez à jour les informations de l’utilisateur.</p>
        </div>
        <div class="flex flex-wrap gap-3">
            {{ include('components/_button.html.twig', {
                label: 'Retour à la fiche',
                href: path('app_admin_users_show', { id: user.id }),
                variant: 'tertiary',
                size: 'sm'
            }) }}
        </div>
    </div>

    <section class="rounded-2xl border border-default bg-neutral-primary-soft p-6 shadow-xs">
        {{ form_start(form, { attr: { class: 'grid gap-6 md:grid-cols-2', novalidate: 'novalidate', 'data-validate-form': 'true' } }) }}
            {{ include('components/_form_field.html.twig', {
                field: form.firstname,
                required_message: 'Le prénom est obligatoire'
            }) }}
            {{ include('components/_form_field.html.twig', {
                field: form.lastname,
                required_message: 'Le nom est obligatoire'
            }) }}
            {{ include('components/_form_field.html.twig', {
                field: form.email,
                wrapper_class: 'md:col-span-2',
                required_message: 'L’email est obligatoire',
                email_message: 'Le format de l’email est invalide',
                pattern: '^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$',
                pattern_message: 'Le format de l’email est invalide'
            }) }}
            <div class="md:col-span-2" data-validate-field>
                {% set password_has_error = form.plainPassword.vars.errors|length > 0 %}
                {% set password_error_id = form.plainPassword.vars.id ~ '-error' %}
                {{ form_label(form.plainPassword, null, { label_attr: {
                    class: 'mb-2 block text-sm font-medium ' ~ (password_has_error ? 'text-danger dark:text-fg-danger-strong' : 'text-heading'),
                    'data-validate-label': 'true',
                    'data-validate-valid-class': 'text-heading',
                    'data-validate-invalid-class': 'text-danger dark:text-fg-danger-strong'
                } }) }}
                <p class="mb-2 text-xs text-body-subtle">Laissez vide pour conserver le mot de passe actuel.</p>
                <div class="flex flex-col gap-2 md:flex-row md:items-center">
                    <div class="relative flex-1">
                        {{ form_widget(form.plainPassword, { attr: {
                            class: 'w-full rounded-base border bg-neutral-primary px-3 py-2 pr-10 text-sm text-heading placeholder:text-body focus:ring-2 ' ~ (password_has_error ? 'border-danger/60 dark:border-danger-subtle focus:border-danger focus:ring-danger-medium/40 dark:focus:ring-danger' : 'border-default focus:border-brand-medium focus:ring-brand-medium/40'),
                            'aria-invalid': password_has_error ? 'true' : 'false',
                            'aria-describedby': password_error_id,
                            'data-validate-input': 'true',
                            'data-validate-valid-class': 'border-default focus:border-brand-medium focus:ring-brand-medium/40',
                            'data-validate-invalid-class': 'border-danger/60 dark:border-danger-subtle focus:border-danger focus:ring-danger-medium/40 dark:focus:ring-danger',
                            'data-validate-required-message': 'Le mot de passe est obligatoire'
                        } }) }}
                        {{ include('components/_password_toggle.html.twig', { input_id: form.plainPassword.vars.id }) }}
                    </div>
                    <div class="flex items-center gap-2">
                        <button type="button"
                                class="box-border inline-flex items-center rounded-base border border-default bg-neutral-primary-soft px-3 py-1.5 text-xs font-medium leading-5 text-body shadow-xs hover:bg-neutral-secondary-medium hover:text-heading focus:outline-none focus:ring-4 focus:ring-neutral-tertiary-soft"
                                data-password-generate
                                data-password-target="{{ form.plainPassword.vars.id }}"
                                data-password-modal-target="password-generate-modal"
                                data-password-length="16">
                            Générer
                        </button>
                        {{ include('components/_password_copy_button.html.twig', { input_id: form.plainPassword.vars.id }) }}
                    </div>
                </div>
                <div id="{{ password_error_id }}" data-validate-error class="mt-1 text-xs text-danger dark:text-fg-danger-strong{% if not password_has_error %} hidden{% endif %}">{{ form_errors(form.plainPassword) }}</div>
                <div class="mt-4 rounded-base border border-default bg-neutral-primary-soft p-4">
                    {{ include('components/_password_requirements.html.twig', { input_id: form.plainPassword.vars.id }) }}
                </div>
            </div>
            {{ include('components/_form_field.html.twig', {
                field: form.mobilePhone,
                input_attr: {
                    placeholder: '06 12 34 56 78',
                    'data-phone-mask': true
                }
            }) }}
            {{ include('components/_form_field.html.twig', {
                field: form.fixedPhone,
                input_attr: {
                    placeholder: '01 23 45 67 89',
                    'data-phone-mask': true
                }
            }) }}
            <div class="md:col-span-2" data-validate-field data-validate-group="checkboxes" data-validate-required-message="Au moins un rôle est obligatoire">
                {% set roles_has_error = form.roleEntities.vars.errors|length > 0 %}
                {{ form_label(form.roleEntities, null, { label_attr: {
                    class: 'mb-3 block text-sm font-medium ' ~ (roles_has_error ? 'text-danger dark:text-fg-danger-strong' : 'text-heading'),
                    'data-validate-label': 'true',
                    'data-validate-valid-class': 'text-heading',
                    'data-validate-invalid-class': 'text-danger dark:text-fg-danger-strong'
                } }) }}
                <div class="grid gap-3 sm:grid-cols-2">
                    {{ form_widget(form.roleEntities, { attr: { class: 'space-y-2' } }) }}
                </div>
                <div data-validate-error class="mt-2 text-xs text-danger dark:text-fg-danger-strong{% if not roles_has_error %} hidden{% endif %}">
                    {{ form_errors(form.roleEntities) }}
                </div>
            </div>
            <div class="md:col-span-2">
                <label class="inline-flex items-center cursor-pointer">
                    {{ form_widget(form.isActive, { attr: { class: 'sr-only peer' } }) }}
                    <div class="relative h-5 w-9 rounded-full bg-neutral-quaternary peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-brand-soft peer-checked:bg-brand after:absolute after:start-[2px] after:top-[2px] after:h-4 after:w-4 after:rounded-full after:bg-white after:transition-all peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-buffer"></div>
                    <span class="ms-3 text-sm font-medium text-heading select-none">Compte actif</span>
                </label>
                {{ form_errors(form.isActive) }}
            </div>
            <div class="md:col-span-2 flex items-center justify-end gap-3">
                {{ include('components/_button.html.twig', {
                    label: 'Annuler',
                    href: path('app_admin_users_show', { id: user.id }),
                    variant: 'tertiary',
                    size: 'sm'
                }) }}
                {{ include('components/_button.html.twig', {
                    label: 'Enregistrer',
                    variant: 'primary',
                    size: 'sm',
                    type: 'submit',
                    extra_class: 'min-w-[160px]'
                }) }}
            </div>
        {{ form_end(form) }}
    </section>

    {{ include('components/_password_generate_modal.html.twig', {
        modal_id: 'password-generate-modal'
    }) }}
{% endblock %}
