{% extends 'admin/_layout.html.twig' %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% set active_menu = 'users' %}
{% set page_heading = 'Ajouter un utilisateur' %}

{% block admin_breadcrumb %}
    <div class="mb-4">
        {% include 'admin/users/_breadcrumb.html.twig' with { current_label: page_heading } %}
    </div>
{% endblock %}

{% block admin_content %}
    <div class="mb-8 flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Administration</p>
            <h1 class="mt-3 text-3xl font-semibold text-heading">{{ page_heading }}</h1>
            <p class="mt-2 max-w-2xl text-sm text-body">Création d’un nouvel utilisateur.</p>
        </div>
        <div class="flex flex-wrap gap-3">
            {{ include('components/_button.html.twig', {
                label: 'Retour à la liste',
                href: path('app_admin_users_index'),
                variant: 'tertiary',
                size: 'sm'
            }) }}
        </div>
    </div>

    <section class="rounded-2xl border border-default bg-neutral-primary-soft p-6 shadow-xs">
        {{ form_start(form, { attr: { class: 'grid gap-6 md:grid-cols-2' } }) }}
            <div>
                {{ form_label(form.lastname, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-heading' } }) }}
                {{ form_widget(form.lastname, { attr: { class: 'w-full rounded-base border border-default bg-neutral-primary px-3 py-2 text-sm text-heading placeholder:text-body focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40' } }) }}
                {{ form_errors(form.lastname) }}
            </div>
            <div>
                {{ form_label(form.firstname, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-heading' } }) }}
                {{ form_widget(form.firstname, { attr: { class: 'w-full rounded-base border border-default bg-neutral-primary px-3 py-2 text-sm text-heading placeholder:text-body focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40' } }) }}
                {{ form_errors(form.firstname) }}
            </div>
            <div class="md:col-span-2">
                {{ form_label(form.email, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-heading' } }) }}
                {{ form_widget(form.email, { attr: { class: 'w-full rounded-base border border-default bg-neutral-primary px-3 py-2 text-sm text-heading placeholder:text-body focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40' } }) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="md:col-span-2">
                {{ form_label(form.plainPassword, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-heading' } }) }}
                <div class="flex flex-col gap-2 md:flex-row md:items-center">
                    <div class="relative flex-1">
                        {{ form_widget(form.plainPassword, { attr: { class: 'w-full rounded-base border border-default bg-neutral-primary px-3 py-2 pr-10 text-sm text-heading placeholder:text-body focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40' } }) }}
                        {{ include('components/_password_toggle.html.twig', { input_id: form.plainPassword.vars.id }) }}
                    </div>
                    <div class="flex items-center gap-2">
                        <button type="button"
                                class="box-border inline-flex items-center rounded-base border border-default bg-neutral-primary-soft px-3 py-1.5 text-xs font-medium leading-5 text-body shadow-xs hover:bg-neutral-secondary-medium hover:text-heading focus:outline-none focus:ring-4 focus:ring-neutral-tertiary-soft"
                                data-password-generate
                                data-password-target="{{ form.plainPassword.vars.id }}"
                                data-password-modal-target="password-generate-modal"
                                data-password-length="16">
                            Générer
                        </button>
                        {{ include('components/_password_copy_button.html.twig', { input_id: form.plainPassword.vars.id }) }}
                    </div>
                </div>
                {{ form_errors(form.plainPassword) }}
                <div class="mt-4 rounded-base border border-default bg-neutral-primary-soft p-4">
                    {{ include('components/_password_requirements.html.twig', { input_id: form.plainPassword.vars.id }) }}
                </div>
            </div>
            <div>
                {{ form_label(form.mobilePhone, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-heading' } }) }}
                {{ form_widget(form.mobilePhone, { attr: { class: 'w-full rounded-base border border-default bg-neutral-primary px-3 py-2 text-sm text-heading placeholder:text-body focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40', placeholder: '06 12 34 56 78', 'data-phone-mask': true } }) }}
                {{ form_errors(form.mobilePhone) }}
            </div>
            <div>
                {{ form_label(form.fixedPhone, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-heading' } }) }}
                {{ form_widget(form.fixedPhone, { attr: { class: 'w-full rounded-base border border-default bg-neutral-primary px-3 py-2 text-sm text-heading placeholder:text-body focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40', placeholder: '01 23 45 67 89', 'data-phone-mask': true } }) }}
                {{ form_errors(form.fixedPhone) }}
            </div>
            <div class="md:col-span-2">
                {{ form_label(form.roleEntities, null, { label_attr: { class: 'mb-3 block text-sm font-medium text-heading' } }) }}
                <div class="grid gap-3 sm:grid-cols-2">
                    {{ form_widget(form.roleEntities, { attr: { class: 'space-y-2' } }) }}
                </div>
                {{ form_errors(form.roleEntities) }}
            </div>
            <div class="md:col-span-2">
                <label class="inline-flex items-center cursor-pointer">
                    {{ form_widget(form.isActive, { attr: { class: 'sr-only peer' } }) }}
                    <div class="relative h-5 w-9 rounded-full bg-neutral-quaternary peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-brand-soft peer-checked:bg-brand after:absolute after:start-[2px] after:top-[2px] after:h-4 after:w-4 after:rounded-full after:bg-white after:transition-all peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-buffer"></div>
                    <span class="ms-3 text-sm font-medium text-heading select-none">Compte actif</span>
                </label>
                {{ form_errors(form.isActive) }}
            </div>
            <div class="md:col-span-2 flex items-center justify-end gap-3">
                {{ include('components/_button.html.twig', {
                    label: 'Annuler',
                    href: path('app_admin_users_index'),
                    variant: 'tertiary',
                    size: 'sm'
                }) }}
                {{ include('components/_button.html.twig', {
                    label: 'Créer l’utilisateur',
                    variant: 'primary',
                    size: 'sm',
                    type: 'submit',
                    extra_class: 'min-w-[160px]'
                }) }}
            </div>
        {{ form_end(form) }}
    </section>

    {{ include('components/_password_generate_modal.html.twig', {
        modal_id: 'password-generate-modal'
    }) }}
{% endblock %}
