{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
    <div class="min-h-screen bg-neutral-primary-soft text-body">
        <aside id="admin-sidebar" class="fixed inset-y-0 left-0 z-40 w-64 -translate-x-full border-r border-default bg-neutral-primary px-4 py-6 transition-transform lg:translate-x-0" aria-label="Sidebar">
            <div class="mb-8 flex items-center gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-base bg-brand-strong text-white">
                    <span class="text-sm font-semibold">CD08</span>
                </div>
                <div>
                    <p class="text-xs uppercase tracking-[0.18em] text-brand">SPSL</p>
                    <p class="text-sm font-semibold text-heading">Backoffice</p>
                </div>
            </div>

            <nav class="space-y-4 text-sm">
                <div>
                    <p class="mb-2 text-xs font-semibold uppercase tracking-[0.18em] text-brand">Gestion</p>
                    <ul class="space-y-0">
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Salles et matériels</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Usagers</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Devis et conventions</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div>
                    <p class="mb-2 text-xs font-semibold uppercase tracking-[0.18em] text-brand">Paramétrage</p>
                    <ul class="space-y-0">
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Tarification</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Habilitations</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Rapports</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div>
                    <p class="mb-2 text-xs font-semibold uppercase tracking-[0.18em] text-brand">Pilotage</p>
                    <ul class="space-y-0">
                        <li>
                            <a class="flex items-center gap-3 rounded-base bg-neutral-secondary-soft px-3 py-1.5 text-heading" href="#">
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Réservations</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 rounded-base px-3 py-1.5 text-body hover:bg-neutral-secondary-soft" href="#">
                                <span>Plannings</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </aside>

        <div class="lg:pl-64">
            <header class="sticky top-0 z-30 border-b border-default bg-neutral-primary/90 backdrop-blur">
                <div class="flex flex-wrap items-center gap-3 px-4 py-3 sm:px-6">
                    <button class="inline-flex items-center justify-center rounded-base border border-default bg-neutral-primary p-2 text-heading hover:bg-neutral-secondary-soft lg:hidden" type="button" data-drawer-target="admin-sidebar" data-drawer-toggle="admin-sidebar" aria-controls="admin-sidebar">
                        <span class="sr-only">Ouvrir le menu</span>
                        <svg class="icon-md text-heading" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M5 7h14M5 12h14M5 17h14"/>
                        </svg>
                    </button>
                    <div class="flex-1">
                        <label class="sr-only" for="admin-search">Recherche</label>
                        <div class="relative">
                            <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-body">
                                <svg class="icon-sm" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>
                                </svg>
                            </span>
                            <input id="admin-search" type="search" placeholder="Rechercher une salle, un usager..." class="w-full rounded-base border border-default bg-neutral-primary-soft py-2 pl-10 pr-4 text-sm text-heading placeholder:text-body focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40" />
                        </div>
                    </div>
                    <button class="inline-flex items-center justify-center rounded-base border border-default bg-neutral-primary p-2 text-heading hover:bg-neutral-secondary-soft" type="button">
                        <span class="sr-only">Notifications</span>
                        <svg class="icon-md text-heading" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5.365V3m0 2.365a5.338 5.338 0 0 1 5.133 5.368v1.8c0 2.386 1.867 2.982 1.867 4.175 0 .593 0 1.292-.538 1.292H5.538C5 18 5 17.301 5 16.708c0-1.193 1.867-1.789 1.867-4.175v-1.8A5.338 5.338 0 0 1 12 5.365ZM8.733 18c.094.852.306 1.54.944 2.112a3.48 3.48 0 0 0 4.646 0c.638-.572 1.236-1.26 1.33-2.112h-6.92Z"/>
                        </svg>
                    </button>
                    <button id="theme-toggle" class="inline-flex items-center justify-center rounded-base border border-default bg-neutral-primary p-2 text-heading hover:bg-neutral-secondary-soft" type="button">
                        <span class="sr-only">Basculer le theme</span>
                        <svg id="theme-toggle-dark-icon" class="hidden icon-md text-heading" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 21a9 9 0 0 1-.5-17.986V3c-.354.966-.5 1.911-.5 3a9 9 0 0 0 9 9c.239 0 .254.018.488 0A9.004 9.004 0 0 1 12 21Z"/>
                        </svg>
                        <svg id="theme-toggle-light-icon" class="hidden icon-md text-heading" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5V3m0 18v-2M7.05 7.05 5.636 5.636m12.728 12.728L16.95 16.95M5 12H3m18 0h-2M7.05 16.95l-1.414 1.414M18.364 5.636 16.95 7.05M16 12a4 4 0 1 1-8 0 4 4 0 0 1 8 0Z"/>
                        </svg>
                    </button>
                    <button id="admin-user-menu" data-dropdown-toggle="admin-user-dropdown" class="inline-flex items-center gap-3 rounded-base border border-default bg-neutral-primary px-3 py-2 text-sm font-semibold text-heading hover:bg-neutral-secondary-soft" type="button">
                        <span class="inline-flex h-7 w-7 items-center justify-center rounded-full bg-brand-strong text-xs text-white">FD</span>
                        <span class="hidden sm:inline">Frédéric</span>
                        <svg class="icon-sm text-heading" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m8 10 4 4 4-4"/>
                        </svg>
                    </button>
                    <div id="admin-user-dropdown" class="z-50 hidden w-48 divide-y divide-neutral-secondary-soft rounded-base border border-default bg-neutral-primary shadow-xs">
                        <div class="px-4 py-3 text-sm">
                            <p class="font-semibold text-heading">Frédéric Demoulin</p>
                            <p class="text-xs text-body">Admin SPSL</p>
                        </div>
                        <ul class="py-2 text-sm text-body">
                            <li><a class="block px-4 py-2 hover:bg-neutral-secondary-soft" href="#">Mon profil</a></li>
                            <li><a class="block px-4 py-2 hover:bg-neutral-secondary-soft" href="#">Paramètres</a></li>
                        </ul>
                        <div class="py-2">
                            <a class="block px-4 py-2 text-sm text-body hover:bg-neutral-secondary-soft" href="#">Déconnexion</a>
                        </div>
                    </div>
                </div>
            </header>

            <main class="px-4 py-8 sm:px-6">
                <div class="mb-8 flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
                    <div>
                        <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Espace admin SPSL</p>
                        <h1 class="mt-3 text-3xl font-semibold text-heading">Tableau de bord</h1>
                        <p class="mt-2 max-w-2xl text-sm text-body">Suivi opérationnel des demandes, devis et disponibilités.</p>
                    </div>
                    <div class="flex flex-wrap gap-3">
                        <button class="text-white bg-brand box-border border border-transparent hover:bg-brand-strong focus:ring-4 focus:ring-brand-medium shadow-xs font-medium leading-5 rounded-base text-sm px-4 py-2.5 focus:outline-none">
                            Nouvelle réservation
                        </button>
                        <button class="text-body bg-neutral-primary-soft border border-default hover:bg-neutral-secondary-medium hover:text-heading focus:ring-4 focus:ring-neutral-tertiary-soft shadow-xs font-medium leading-5 rounded-base text-sm px-4 py-2.5 focus:outline-none">
                            Créer un usager
                        </button>
                    </div>
                </div>

                <section class="grid gap-6 md:grid-cols-2 xl:grid-cols-4">
                    <div class="rounded-2xl border border-default bg-neutral-primary p-5 shadow-xs">
                        <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Demandes ouvertes</p>
                        <p class="mt-3 text-3xl font-semibold text-heading">12</p>
                        <p class="mt-1 text-sm text-body">Depuis 7 jours</p>
                    </div>
                    <div class="rounded-2xl border border-default bg-neutral-primary p-5 shadow-xs">
                        <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Devis en attente</p>
                        <p class="mt-3 text-3xl font-semibold text-heading">7</p>
                        <p class="mt-1 text-sm text-body">À valider</p>
                    </div>
                    <div class="rounded-2xl border border-default bg-neutral-primary p-5 shadow-xs">
                        <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Salles disponibles</p>
                        <p class="mt-3 text-3xl font-semibold text-heading">5</p>
                        <p class="mt-1 text-sm text-body">Aujourd'hui</p>
                    </div>
                    <div class="rounded-2xl border border-default bg-neutral-primary p-5 shadow-xs">
                        <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Conventions générées</p>
                        <p class="mt-3 text-3xl font-semibold text-heading">18</p>
                        <p class="mt-1 text-sm text-body">Ce mois-ci</p>
                    </div>
                </section>

                <section class="mt-8 grid gap-6 lg:grid-cols-3">
                    <div class="rounded-2xl border border-default bg-neutral-primary p-6 shadow-xs lg:col-span-2">
                        <div class="flex items-center justify-between">
                            <h2 class="text-lg font-semibold text-heading">Activité récente</h2>
                            <button class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Voir tout</button>
                        </div>
                        <div class="mt-4 space-y-3 text-sm text-body">
                            <div class="flex items-center justify-between rounded-base bg-neutral-secondary-soft px-3 py-2">
                                <span>Demande de réservation - Salle Bairon 1</span>
                                <span class="rounded-full bg-accent-soft px-3 py-1 text-xs font-semibold text-accent-strong">À valider</span>
                            </div>
                            <div class="flex items-center justify-between rounded-base bg-neutral-secondary-soft px-3 py-2">
                                <span>Devis modifié - Maison des Sports</span>
                                <span class="rounded-full bg-accent-soft px-3 py-1 text-xs font-semibold text-accent-strong">En cours</span>
                            </div>
                            <div class="flex items-center justify-between rounded-base bg-neutral-secondary-soft px-3 py-2">
                                <span>Usager créé - Association ABC</span>
                                <span class="rounded-full bg-neutral-tertiary-soft px-3 py-1 text-xs font-semibold text-heading">Nouveau</span>
                            </div>
                        </div>
                    </div>
                    <div class="rounded-2xl border border-default bg-neutral-primary p-6 shadow-xs">
                        <h2 class="text-lg font-semibold text-heading">Prochaines actions</h2>
                        <ul class="mt-4 space-y-3 text-sm text-body">
                            <li class="rounded-base bg-neutral-secondary-soft px-3 py-2">
                                <p class="font-semibold text-heading">Valider devis</p>
                                <p class="text-xs text-body">Association du Bairon</p>
                            </li>
                            <li class="rounded-base bg-neutral-secondary-soft px-3 py-2">
                                <p class="font-semibold text-heading">Relancer caution</p>
                                <p class="text-xs text-body">Entreprise X</p>
                            </li>
                            <li class="rounded-base bg-neutral-secondary-soft px-3 py-2">
                                <p class="font-semibold text-heading">Mise à jour matériel</p>
                                <p class="text-xs text-body">Site Vieilles Forges</p>
                            </li>
                        </ul>
                    </div>
                </section>
            </main>
        </div>
    </div>
{% endblock %}
