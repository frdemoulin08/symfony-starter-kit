{% extends 'admin/_layout.html.twig' %}

{% block title %}Éditer un site{% endblock %}

{% set active_menu = 'sites' %}

{% block admin_content %}
    <div class="mb-8 flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Gestion</p>
            <h1 class="mt-3 text-3xl font-semibold text-heading">Éditer un site</h1>
            <p class="mt-2 max-w-2xl text-sm text-body">Mettez à jour les informations du site.</p>
        </div>
        <div class="flex flex-wrap gap-3">
            {{ include('components/_button.html.twig', {
                label: 'Retour à la liste',
                href: path('app_admin_sites_index'),
                variant: 'tertiary',
                size: 'sm'
            }) }}
        </div>
    </div>

    <section class="rounded-2xl border border-default bg-neutral-primary-soft p-6 shadow-xs">
        {{ form_start(form, { attr: { class: 'grid gap-6 md:grid-cols-2' } }) }}
            <div class="md:col-span-2">
                {{ form_label(form.name, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-heading' } }) }}
                {{ form_widget(form.name, { attr: { class: 'w-full rounded-base border border-default bg-neutral-primary px-3 py-2 text-sm text-heading placeholder:text-body focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40' } }) }}
                {{ form_errors(form.name) }}
            </div>
            <div>
                {{ form_label(form.city, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-heading' } }) }}
                {{ form_widget(form.city, { attr: { class: 'w-full rounded-base border border-default bg-neutral-primary px-3 py-2 text-sm text-heading placeholder:text-body focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40' } }) }}
                {{ form_errors(form.city) }}
            </div>
            <div>
                {{ form_label(form.status, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-heading' } }) }}
                {{ form_widget(form.status, { attr: { class: 'w-full rounded-base border border-default bg-neutral-primary px-3 py-2 text-sm text-heading focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40' } }) }}
                {{ form_errors(form.status) }}
            </div>
            <div class="md:col-span-2">
                {{ form_label(form.address, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-heading' } }) }}
                {{ form_widget(form.address, { attr: { class: 'w-full rounded-base border border-default bg-neutral-primary px-3 py-2 text-sm text-heading placeholder:text-body focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40' } }) }}
                {{ form_errors(form.address) }}
            </div>
            <div>
                {{ form_label(form.capacity, null, { label_attr: { class: 'mb-2 block text-sm font-medium text-heading' } }) }}
                {{ form_widget(form.capacity, { attr: { class: 'w-full rounded-base border border-default bg-neutral-primary px-3 py-2 text-sm text-heading placeholder:text-body focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40' } }) }}
                {{ form_errors(form.capacity) }}
            </div>
            <div class="md:col-span-2 flex items-center justify-end gap-3">
                {{ include('components/_button.html.twig', {
                    label: 'Annuler',
                    href: path('app_admin_sites_show', { id: site.id }),
                    variant: 'tertiary',
                    size: 'sm'
                }) }}
                {{ include('components/_button.html.twig', {
                    label: 'Enregistrer',
                    variant: 'primary',
                    size: 'sm',
                    type: 'submit',
                    extra_class: 'min-w-[140px]'
                }) }}
            </div>
        {{ form_end(form) }}
    </section>
{% endblock %}
