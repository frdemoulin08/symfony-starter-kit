{#
params:
- homeRoute
- homeLabel
- firstLevelRoute
- firstLevelLabel
- firstLevelHasLink (bool)
- secondLevelIndexRoute
- secondLevelIndexLabel
- secondLevelShowRoute
- secondLevelShowLabel
- secondLevelCreateRoute
- secondLevelCreateLabel
- secondLevelEditRoute
- secondLevelEditLabel
#}

{% set firstLevelHasLink = to_bool(firstLevelHasLink|default(true), true) %}
{% set current_route = app.request.attributes.get('_route') %}

{% if current_route == secondLevelIndexRoute or current_route == secondLevelShowRoute or current_route == secondLevelCreateRoute or current_route == secondLevelEditRoute %}
	<nav class="flex" aria-label="Fil d’ariane">
		<ol class="flex flex-wrap items-center gap-x-2 gap-y-1">
			{# accueil #}
			<li class="inline-flex items-center">
				<a href="{{ path(homeRoute) }}" class="inline-flex items-center text-xs font-medium text-body hover:text-fg-brand sm:text-sm leading-tight whitespace-normal">
					<svg class="me-1.5 h-4 w-4 text-body" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m4 12 8-8 8 8M6 10.5V19a1 1 0 0 0 1 1h3v-3a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3h3a1 1 0 0 0 1-1v-8.5"/>
					</svg>
					{{ homeLabel }}
				</a>
			</li>
			{# niveau 1 du menu #}
			<li>
				<div class="flex items-center space-x-1.5">
					<svg class="h-3.5 w-3.5 text-body rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/>
					</svg>
					{% if firstLevelHasLink %}
						<a href="{{ path(firstLevelRoute) }}" class="inline-flex items-center text-xs font-medium text-body hover:text-fg-brand sm:text-sm leading-tight whitespace-normal">
							{{ firstLevelLabel }}
						</a>
					{% else %}
						<span class="inline-flex items-center text-xs font-medium text-body-subtle sm:text-sm leading-tight whitespace-normal">{{ firstLevelLabel }}</span>
					{% endif %}
				</div>
			</li>
			{# niveau 2 du menu - page d'index #}
			{% if current_route == secondLevelIndexRoute %}
				<li aria-current="page">
					<div class="flex items-center space-x-1.5">
						<svg class="h-3.5 w-3.5 text-body rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/>
						</svg>
						<span class="inline-flex items-center text-xs font-medium text-body-subtle sm:text-sm leading-tight whitespace-normal">{{ secondLevelIndexLabel }}</span>
					</div>
				</li>
			{% endif %}
			{# niveau 2 du menu - page de detail #}
			{% if current_route == secondLevelShowRoute %}
				<li>
					<div class="flex items-center space-x-1.5">
						<svg class="h-3.5 w-3.5 text-body rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/>
						</svg>
						<a href="{{ path(secondLevelIndexRoute) }}" class="inline-flex items-center text-xs font-medium text-body hover:text-fg-brand sm:text-sm leading-tight whitespace-normal">
							{{ secondLevelIndexLabel }}
						</a>
					</div>
				</li>
				<li aria-current="page">
					<div class="flex items-center space-x-1.5">
						<svg class="h-3.5 w-3.5 text-body rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/>
						</svg>
						<span class="inline-flex items-center text-xs font-medium text-body-subtle sm:text-sm leading-tight whitespace-normal">{{ secondLevelShowLabel }}</span>
					</div>
				</li>
			{% endif %}
			{# niveau 2 du menu - page de création / édition #}
			{% if current_route == secondLevelCreateRoute or current_route == secondLevelEditRoute %}
				<li>
					<div class="flex items-center space-x-1.5">
						<svg class="h-3.5 w-3.5 text-body rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/>
						</svg>
						<a href="{{ path(secondLevelIndexRoute) }}" class="inline-flex items-center text-xs font-medium text-body hover:text-fg-brand sm:text-sm leading-tight whitespace-normal">
							{{ secondLevelIndexLabel }}
						</a>
					</div>
				</li>
				<li aria-current="page">
					<div class="flex items-center space-x-1.5">
						<svg class="h-3.5 w-3.5 text-body rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/>
						</svg>
						<span class="inline-flex items-center text-xs font-medium text-body-subtle sm:text-sm leading-tight whitespace-normal">
							{% if current_route == secondLevelCreateRoute %}
								{{ secondLevelCreateLabel }}
							{% elseif current_route == secondLevelEditRoute %}
								{{ secondLevelEditLabel }}
							{% endif %}
						</span>
					</div>
				</li>
			{% endif %}
		</ol>
	</nav>
{% endif %}


