{#
params:
- input_id (string) : id de l'input mot de passe à contrôler
- label_show (string)
- label_hide (string)
#}
{% set input_id = input_id|default('user_plainPassword') %}
{% set label_show = label_show|default('Afficher le mot de passe') %}
{% set label_hide = label_hide|default('Masquer le mot de passe') %}

<button type="button"
        class="absolute inset-y-0 right-2 flex items-center text-body hover:text-heading rounded-base focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-medium/40"
        data-password-toggle
        data-password-target="{{ input_id }}"
        data-password-label-show="{{ label_show }}"
        data-password-label-hide="{{ label_hide }}"
        aria-label="{{ label_show }}"
        aria-pressed="false">
    <span data-password-toggle-icon="show">
        <svg class="h-5 w-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
            <path stroke="currentColor" stroke-width="2" d="M21 12c0 1.2-4.03 6-9 6s-9-4.8-9-6c0-1.2 4.03-6 9-6s9 4.8 9 6Z"/>
            <path stroke="currentColor" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
        </svg>
    </span>
    <span data-password-toggle-icon="hide" class="hidden">
        <svg class="h-5 w-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.933 13.909A4.357 4.357 0 0 1 3 12c0-1 4-6 9-6m7.6 3.8A5.068 5.068 0 0 1 21 12c0 1-3 6-9 6-.314 0-.62-.014-.918-.04M5 19 19 5m-4 7a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
        </svg>
    </span>
</button>
