{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="bg-neutral-primary">
        <div class="mx-auto flex min-h-screen flex-col items-center justify-center px-6 py-8">
            <a class="mb-6 flex items-center text-2xl font-semibold text-heading" href="{{ path('app_home') }}">
                <span class="mr-3 inline-flex h-9 w-9 items-center justify-center rounded-base bg-brand-strong text-sm font-semibold text-white">CD08</span>
                Room booking
            </a>
            <div class="w-full rounded-2xl border border-default bg-neutral-primary-soft shadow-xs sm:max-w-md xl:p-0">
                <div class="space-y-4 p-6 sm:p-8">
                    <h1 class="text-xl font-semibold leading-tight tracking-tight text-heading md:text-2xl">
                        Connexion à votre compte
                    </h1>

                    {% if error %}
                        <div class="rounded-base border border-danger/30 bg-danger/10 px-4 py-3 text-sm text-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form class="space-y-4" method="post" action="{{ path('app_login') }}">
                        <div>
                            <label class="mb-2 block text-sm font-medium text-heading" for="email">Adresse email</label>
                            <input type="email" name="email" id="email" value="{{ last_username }}" autocomplete="email" required autofocus class="w-full rounded-base border border-default bg-neutral-primary-soft px-3 py-2.5 text-sm text-heading focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40">
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-heading" for="password">Mot de passe</label>
                            <input type="password" name="password" id="password" placeholder="••••••••" autocomplete="current-password" required class="w-full rounded-base border border-default bg-neutral-primary-soft px-3 py-2.5 text-sm text-heading focus:border-brand-medium focus:ring-2 focus:ring-brand-medium/40">
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="w-full text-white bg-brand box-border border border-transparent hover:bg-brand-strong focus:ring-4 focus:ring-brand-medium shadow-xs font-medium leading-5 rounded-base text-sm px-5 py-2.5 text-center focus:outline-none">
                            Se connecter
                        </button>
                        <a class="block text-center text-sm font-semibold text-fg-brand hover:underline" href="#">
                            Mot de passe oublié ?
                        </a>
                        <p class="text-center text-sm text-body">
                            <a class="font-semibold text-fg-brand hover:underline" href="{{ path('app_home') }}">Retour à l’accueil</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
